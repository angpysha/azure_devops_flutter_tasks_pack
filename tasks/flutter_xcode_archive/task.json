{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "f86610b2-db52-440c-bd09-4b24658f8201",
    "name": "flutter-xcode-archive-ios",
    "friendlyName": "Xcode Archive for Flutter iOS",
    "description": "Funcitonality to archive iOS app for Flutter and export it as well",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Andrii Petrovskyi",
    "version": {
        "Major": 0,
        "Minor": 5,
        "Patch": 3
    },
    "instanceNameFormat": "Xcode Archive for Flutter iOS",
    "inputs": [
       {
        "name": "path",
        "type": "filePath",
        "label": "Path to the project",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "Path to the project"
       },
       {
        "name": "archivePath",
        "type": "filePath",
        "label": "Archive path",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "Archive path"
       },
       {
        "name": "taskType",
        "type": "pickList",
        "label": "Task type",
        "defaultValue": "archive",
        "required": true,
        "helpMarkDown": "Task type",
        "options": {
            "archive": "Archive",
            "export": "Export"
        }
       },
       {
        "name": "signOnArchive",
        "type": "boolean",
        "label": "Sign on archive",
        "defaultValue": "true",
        "required": true,
        "helpMarkDown": "Sign on archive"
       },
       {
        "name": "manualSign",
        "type": "boolean",
        "label": "Manual sign",
        "defaultValue": "false",
        "required": true,
        "helpMarkDown": "Manual sign"
       },
       {
        "name": "configuration",
        "type": "string",
        "label": "Configuration",
        "required": true,
        "helpMarkDown": "Configuration",
        "visibleRule": "taskType = archive"
       },
       {
        "name": "scheme",
        "type": "string",
        "label": "Build scheme",
        "required": true,
        "helpMarkDown": "Build scheme",
        "visibleRule": "taskType = archive"
       },
       {
        "name": "workspace",
        "type": "filePath",
        "label": "Workspace",
        "required": true,
        "helpMarkDown": "Workspace path",
        "visibleRule": "taskType = archive"
       },
       {
        "name": "signIdentity",
        "type": "string",
        "label": "Sign identity",
        "required": false,
        "helpMarkDown": "Sign identity",
        "visibleRule": "taskType = archive && signOnArchive = true"
       },
       {
        "name": "provisioningProfile",
        "type": "string",
        "label": "Provisioning profile UUID",
        "required": false,
        "helpMarkDown": "Provisioning profile UUID",
        "visibleRule": "taskType = archive && signOnArchive = true"
       },
       {
        "name": "exportOptionsPlist",
        "type": "secureFile",
        "defaultValue": "",
        "label": "Export options plist",
        "required": true,
        "helpMarkDown": "Export options plist",
        "visibleRule": "taskType = export"
       },
       {
        "name": "exportPath",
        "type": "filePath",
        "label": "Export path",
        "required": true,
        "helpMarkDown": "Export path",
        "visibleRule": "taskType = export"
       },
       {
        "name": "verbose",
        "type": "boolean",
        "label": "Verbose",
        "defaultValue": "false",
        "required": true,
        "helpMarkDown": "Verbose"
       }
    ],
    "execution": {
        "Node20_1": {
            "target": "index.js"
        }
    },
    "prejobexecution": {
        "Node20_1": {
            "target": "prejob.js"
        }
    },
    "postjobexecution": {
        "Node20_1": {
            "target": "postjob.js"
        }
    },
    "restrictions": {
        "commands": {
          "mode": "restricted"
        },
        "settableVariables": {
          "allowed": []
        }
      }
}